{
  "name": "isntgram",
  "version": "0.2.0",
  "type": "module",
  "private": true,
  "description": "Modern Instagram clone - Full stack social media application",
  "dependencies": {
    "react": "^18.3.1",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^18.3.1",
    "react-icons": "^3.11.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-is": "^19.1.0",
    "react-modal": "^3.14.3",
    "react-router-dom": "^6.30.1",
    "react-toastify": "^7.0.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest",
    "backend": "cd .venv && source bin/activate && cd .. && python -m flask run -p 8080",
    "backend:dev": "cd .venv && source bin/activate && cd .. && python -m flask run --debug -p 8080",
    "full-dev": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "start:all": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "dev:all": "concurrently \"npm run backend:dev\" \"npm run dev\"",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:strict": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "mdlint": "markdownlint '**/*.md' --ignore node_modules",
    "mdlint:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "validate": "npm run lint:strict && npm run type-check && npm run format:check",
    "validate:fix": "npm run lint:fix && npm run format && npm run validate",
    "validate:full": "npm run lint:strict && npm run type-check:strict && npm run format:check && npm run mdlint && npm run test:unit",
    "validate:quick": "npm run lint && npm run type-check",
    "code-quality": "npm run validate:full"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.3%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ]
  },
  "proxy": "http://localhost:8080",
  "overrides": {
    "svgo": "^4.0.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@svgr/webpack": "^8.1.0",
    "nth-check": "^2.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^19.1.6",
    "@types/react-modal": "^3.16.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
